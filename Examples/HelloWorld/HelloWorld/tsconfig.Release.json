{
  // TypeScript 2.2 compiler configuration
  // RELEASE CONFIGURATION
  "$schema": "http://json.schemastore.org/tsconfig#",

  "extends": "./tsconfig.common.json",

  "compilerOptions": {
    // generate .d.ts declaration file
    "declaration": true,
    // generate source maps
    "sourceMap": false,
    // remove comments
    "removeComments": false
  }

}
