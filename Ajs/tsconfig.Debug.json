{
  // TypeScript 2.1 compiler configuration
  // DEBUG CONFIGURATION
  "$schema": "http://json.schemastore.org/tsconfig#",

  "extends": "./tsconfig.common.json",

  "compilerOptions": {
    // generate source maps
    "sourceMap": true,
    // source map root
    "mapRoot": "/js",
    // map root
    "sourceRoot": "/src/Ajs",
    // remove comments
    "removeComments": false
  },

  // exclude all .Release.ts files
  "exclude": [
    "./bin/**/*",
    "./**/*.Release.ts"
  ]

}
